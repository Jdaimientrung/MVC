@model PagedList.IPagedList<Models.EF.Category>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Quản lý người dùng</h1>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Danh sách người dùng
                @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="card-body">
                <table class="table">
                    @*id="datatablesSimple"*@
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Picture</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            var stt = (Model.PageNumber - 1) * Model.PageSize + 1; // Bắt đầu STT cho phân trang
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Picture</td>
                                   
                                    <td>

                                        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |
                                        @Html.ActionLink("Detail","Detail", new { id = item.CategoryID })|
                                        @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("id", item.CategoryID)
                                            <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                        }
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No data available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
            </div>
        </div>
    </div>
</main>
